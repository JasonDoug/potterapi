{
  "info": {
    "name": "Providers API",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "item": [
    {
      "name": "List Providers",
      "request": {
        "method": "GET",
        "header": [],
        "url": {
          "raw": "{{baseUrl}}/providers",
          "host": [
            "{{baseUrl}}"
          ],
          "path": [
            "providers"
          ]
        }
      }
    },
    {
      "name": "Get Provider (by ID)",
      "request": {
        "method": "GET",
        "header": [],
        "url": {
          "raw": "{{baseUrl}}/providers/{{providerId}}",
          "host": [
            "{{baseUrl}}"
          ],
          "path": [
            "providers",
            "{{providerId}}"
          ]
        }
      }
    },
    {
      "name": "Get Provider Capabilities (by ID)",
      "request": {
        "method": "GET",
        "header": [],
        "url": {
          "raw": "{{baseUrl}}/providers/{{providerId}}/capabilities",
          "host": [
            "{{baseUrl}}"
          ],
          "path": [
            "providers",
            "{{providerId}}",
            "capabilities"
          ]
        }
      }
    }
  ]
}
