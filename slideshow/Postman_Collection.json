  "item": [
    {
      "name": "Create Script",
      "request": {
        "method": "POST",
        "header": [
          {
            "key": "Content-Type",
            "value": "application/json"
          },
          {
            "key": "Idempotency-Key",
            "value": "{{idempotencyKey}}"
          }
        ],
        "url": {
          "raw": "{{baseUrl}}/v1/scripts",
          "host": [
            "{{baseUrl}}"
          ],
          "path": [
            "v1",
            "scripts"
          ]
        },
        "body": {
          "mode": "raw",
          "raw": "{\n  \"input\": {\n    \"type\": \"text\",\n    \"text\": \"INTRO...\\n\\nSECTION 1...\\n\\nSECTION 2...\"\n  },\n  \"options\": {\n    \"normalize\": true,\n    \"segment\": \"section\"\n  }\n}"
        }
      }
    },
